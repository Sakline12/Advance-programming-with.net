
@{
    ViewBag.Title = "Registration";
}
<center>
    <h2>Registration</h2>

    <form action="/Registration/Registration" method="post">

        Name <input type="text" name="Name" class="form-control" value="@Model.Name" placeholder="Name" />
        <label class="text-danger">@Html.ValidationMessage("Name")</label><br />

        Password <input type="password" name="Password" class="form-control" value="@Model.Password" placeholder="Password" />
        <br />

        Age <input type="number" name="Age" class="form-control" value="@Model.Age" placeholder="Age" />
        <label class="text-danger">@Html.ValidationMessage("Age")</label><br />

        <div style="width: 200px; border:5px; border-color:black;">
            Gender <input type="radio" name="Gender" value="Male" />  Male
            <input type="radio" name="Gender" value="Female" /> Female
        </div>
        <label class="text-danger">@Html.ValidationMessage("Gender")</label><br />

        Email <input type="text" name="Email" class="form-control" value="@Model.Email" placeholder="Email" />
        <label class="text-danger">@Html.ValidationMessage("Email")</label><br />

        Phone number<input type="text" name="Phone_no" class="form-control" value="@Model.Phone_no" placeholder="Phone number" />
        <label class="text-danger">@Html.ValidationMessage("Phone_no")</label><br />

        <input type="hidden" name="type" class="form-control" value="P" />

        Blood group<select id="Blood_group" name="Blood_group" class="form-control">
            <option value="">Select Blood Group</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
        </select>
        <label class="text-danger">@Html.ValidationMessage("Blood_group")</label><br />

        @*Image <input type="file" name="Image" class="form-control" value="@Model.Image" placeholder="Image" />
            <label class="text-danger">@Html.ValidationMessage("Image")</label><br />*@

        <input type="submit" value="Register" class="btn btn-success" />
    </form>
</center>