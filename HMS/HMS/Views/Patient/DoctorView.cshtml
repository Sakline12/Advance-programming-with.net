
@{
    ViewBag.Title = "DoctorView";
    Layout = "~/Views/Shared/Patient.cshtml";
}

<center>
    <h2>Doctor Profile View</h2>
    <b>
        <table class="table table-bordered" align="center" width="500">
            <tr align="center">
                <td width="200">Name :</td>
                <td width="200">@Model.Name</td>
            </tr>
            <tr align="center">
                <td>Age :</td>
                <td>@Model.Age</td>
            </tr>
            <tr align="center">
                <td>Gender :</td>
                <td>@Model.Gender</td>
            </tr>
            <tr align="center">
                <td>Email :</td>
                <td>@Model.Email</td>
            </tr>
            <tr align="center">
                <td>Phone Number :</td>
                <td>@Model.Phone_no</td>
            </tr>
            <tr align="center">
                <td>Department :</td>
                <td>@Model.Department</td>
            </tr>
            <tr align="center">
                <td>Degree :</td>
                <td>@Model.Degree</td>
            </tr>

            <tr align="center">
                <td colspan="2" align="center">
                    <a class="btn btn-lg btn-success" href="/Appointment/Make/@Model.Id">Make Appointment</a>
                </td>
            </tr>

        </table>
    </b>
</center>
