
@{
    ViewBag.Title = "DonorList";
    Layout = "~/Views/Shared/Doctor.cshtml";
}

<h2>DonorList</h2>
<table class="table table-responsive">
    <tr>
        <th>Donor Name</th>
        <th>Organ Type</th>
        <th>Approved ?</th>
        <th>Checked By</th>

        <th></th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Name</td>
            <td>@d.Organ_type</td>
            <td>@d.Approval</td>
            <td>@d.Approved_by</td>
            <td>
                <a class="btn btn-success" href="/Doctor/DonorView/@d.Id">Modify</a>
            </td>
        </tr>
    }
</table>

